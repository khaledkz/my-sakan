<form method="post">
    <div class="form-group has-success">
        <label for="example-text-input text-success" class="col-12 col-form-label ">
            <h3 class="text-danger ml-4">Edit User</h3>
        </label>

        <label for="example-text-input text-success " class="col-12 col-form-label">
            <h4 class="text-primary pl-2">User Name:</h4>
        </label>

        <div class="col-lg-6 col-md-8 col-sm-9 col-xs-9 ">

            <input placeholder="{{user.username}}" value="{{user.username}}" class="form-control" type="text" name="username" id="example-text-input">
        </div>

        <label for="example-text-input text-success " class="col-12 col-form-label">
            <h4 class="text-primary pl-2">First Name:</h4>
        </label>

        <div class="col-lg-6 col-md-8 col-sm-9 col-xs-9 ">
            <input placeholder="{{user.firstName}}" value="{{user.firstName}}" class="form-control" type="text" name="firstName" id="example-text-input">
        </div>

        <label for="example-text-input text-success " class="col-12 col-form-label">
            <h4 class="text-primary pl-2">Last Name:</h4>
        </label>

        <div class="col-lg-6 col-md-8 col-sm-9 col-xs-9 ">
            <input placeholder="{{user.lastName}}" class="form-control" type="text" name="lastName" id="example-text-input" value="{{user.lastName}}">
        </div>

        <div class="col-lg-6 col-md-8 col-sm-9 col-xs-9 ">
            <select class="form-control" name="country">
                <option  selected value="{{user.country}}"> -- {{user.country.name}} selected -- </option>
                {{#each CountriesJson}}
                <option value="{{this.code}} {{this.name}}">{{this.name}}</option>
                {{/each}}

            </select>
        </div>


        {{!-- --------------------------------------------------------------------- --}}
        <label for="example-text-input text-success " class="col-12 col-form-label">
            <h4 class="text-primary pl-2 ">Date of Birth:</h4>
        </label>

        <div class="col-lg-6 col-md-8 col-sm-9 col-xs-9 ">

            <select class="form-control" name="year">
                <option selected value="{{user.dateOfBirth.year}}"> --{{user.dateOfBirth.year}} Selected -- </option>
                {{#each yearsJson}}
                <option type="number" value={{this.year}}>{{this.year}}</option>
                {{/each}}
            </select>

            <select class="form-control" name="month">
                <option selected value="{{user.dateOfBirth.month}}">{{user.dateOfBirth.month}}</option>
                {{#each monthsJson}}
                <option type="number" value={{this.number}}>{{this.name}}</option>
                {{/each}}

                <input class="form-control" type="number" name="day" placeholder="day" value="{{user.dateOfBirth.day}}">

            </select>

            {{!-- --------------------------------------------------------------------- --}}
            <label for="example-text-input text-success " class="col-12 col-form-label">
                <h4 class="text-primary pl-2">Star:</h4>
            </label>

            <div class="col-lg-6 col-md-8 col-sm-9 col-xs-9 ">
                <input placeholder="{{user.star}}" class="form-control" type="text" name="star" id="example-text-input" value="{{user.star}}">
            </div>


            <label for="example-text-input text-success " class="col-12 col-form-label">
                <h4 class="text-primary pl-2">Phone Number:</h4>
            </label>

            <div class="col-lg-6 col-md-8 col-sm-9 col-xs-9 ">
                <input placeholder="{{user.phoneNumber}}" class="form-control" type="text" name="phoneNumber" id="example-text-input" value="{{user.phoneNumber}}">
            </div>


            <label for="example-text-input text-success " class="col-12 col-form-label">
                <h4 class="text-primary pl-2">Email Address:</h4>
            </label>

            <div class="col-lg-6 col-md-8 col-sm-9 col-xs-9 ">
                <input placeholder="{{user.emailAddress}}" class="form-control" type="text" name="emailAddress" id="example-text-input" value="{{user.emailAddress}}">
            </div>
            <div class="col-lg-6 col-md-8 col-sm-9 col-xs-9 mt-3 ">
                <input class="btn btn-success btn-lg" type="submit" value="Submit">
            </div>

        </div>
</form>